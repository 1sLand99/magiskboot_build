---
 native/src/base/files.rs | 8 +++++++-
 1 file changed, 7 insertions(+), 1 deletion(-)

diff --git a/native/src/base/files.rs b/native/src/base/files.rs
index e748b84..9752f1e 100644
--- a/native/src/base/files.rs
+++ b/native/src/base/files.rs
@@ -5,7 +5,13 @@ use std::io::BufRead;
 use std::os::unix::io::{AsRawFd, FromRawFd, OwnedFd, RawFd};
 use std::path::Path;
 
-use libc::{c_char, c_uint, mode_t, EEXIST, ENOENT, O_CLOEXEC, O_PATH};
+use libc::{c_char, c_int, c_uint, mode_t, EEXIST, ENOENT, O_CLOEXEC};
+
+#[cfg(any(target_os = "linux", target_os = "android"))]
+use libc::O_PATH;
+
+#[cfg(not(any(target_os = "linux", target_os = "android")))]
+const O_PATH: c_int = 0x0;
 
 use crate::{bfmt_cstr, errno, xopen};
 
